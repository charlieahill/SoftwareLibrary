<Window x:Class="SoftwareLibrary.Views.ReorderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:SoftwareLibrary"
        xmlns:conv="clr-namespace:SoftwareLibrary.Converters"
        Title="Reorder Icons" Height="480" Width="420" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Window.Resources>
        <conv:StringToImageConverter x:Key="StringToImage" />
    </Window.Resources>
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0">
            <ListBox x:Name="ItemsList" DisplayMemberPath="Title" SelectedIndex="0" HorizontalContentAlignment="Stretch">
                <ListBox.ItemTemplate>
                    <DataTemplate DataType="local:SoftwareItem">
                        <Border Padding="6" Margin="2" Background="White" CornerRadius="4">
                            <DockPanel>
                                <Image Width="48" Height="48" Source="{Binding ImagePath, Converter={StaticResource StringToImage}}" Stretch="UniformToFill" DockPanel.Dock="Left" Margin="0,0,8,0" />
                                <TextBlock Text="{Binding Title}" VerticalAlignment="Center" FontWeight="SemiBold" />
                            </DockPanel>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <StackPanel Orientation="Vertical" Width="90" Margin="8,0,0,0">
                <Button Content="Move Up" Margin="0,4" Click="MoveUp_Click" />
                <Button Content="Move Down" Margin="0,4" Click="MoveDown_Click" />
                <Separator Margin="0,8" />
                <Button Content="Top" Margin="0,4" Click="MoveTop_Click" />
                <Button Content="Bottom" Margin="0,4" Click="MoveBottom_Click" />
                <Separator Margin="0,8" />
                <Button Content="Reset" Margin="0,4" Click="Reset_Click" />
            </StackPanel>
        </DockPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
            <Button Content="OK" Width="90" Margin="4" Click="Ok_Click" IsDefault="True" />
            <Button Content="Cancel" Width="90" Margin="4" Click="Cancel_Click" IsCancel="True" />
        </StackPanel>
    </Grid>
</Window>