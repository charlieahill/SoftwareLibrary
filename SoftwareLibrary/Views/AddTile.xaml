<UserControl x:Class="SoftwareLibrary.Views.AddTile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Allow parent panel to size the control; make root Border stretch to fill the container -->
    <Border x:Name="RootBorderInternal" Style="{DynamicResource TileStyle}" Cursor="Hand" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="+" FontSize="30" HorizontalAlignment="Center" />
            <TextBlock Text="Add new software..." FontSize="12" Foreground="#666" HorizontalAlignment="Center" />
        </StackPanel>
    </Border>
</UserControl>